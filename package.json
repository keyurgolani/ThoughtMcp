{
  "name": "thought",
  "private": true,
  "packageManager": "pnpm@10.25.0",
  "description": "AI that thinks more like humans do - cognitive architecture for enhanced reasoning, memory, and self-monitoring",
  "repository": {
    "type": "git",
    "url": "https://github.com/keyurgolani/ThoughtMcp.git"
  },
  "bugs": {
    "url": "https://github.com/keyurgolani/ThoughtMcp/issues"
  },
  "homepage": "https://github.com/keyurgolani/ThoughtMcp#readme",
  "author": {
    "name": "Keyur Golani",
    "email": "keyurrgolani@gmail.com",
    "url": "https://github.com/keyurgolani"
  },
  "license": "MIT",
  "pnpm": {
    "overrides": {
      "qs": ">=6.14.1"
    }
  },
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:server": "pnpm --filter @thought/server dev",
    "dev:ui": "pnpm --filter @thought/ui dev",
    "build": "pnpm -r build",
    "build:server": "pnpm --filter @thought/server build",
    "build:ui": "pnpm --filter @thought/ui build",
    "test": "pnpm -r test",
    "test:server": "pnpm --filter @thought/server test",
    "test:ui": "pnpm --filter @thought/ui test",
    "test:unit": "pnpm --filter @thought/server test:unit",
    "test:unit:file": "pnpm --filter @thought/server exec vitest run",
    "test:integration": "pnpm --filter @thought/server test:integration",
    "test:integration:file": "pnpm --filter @thought/server exec vitest run",
    "test:e2e": "pnpm --filter @thought/server test:e2e",
    "test:qa": "pnpm --filter @thought/server test:qa",
    "test:coverage": "pnpm -r test:coverage",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "infra:up": "docker compose -f docker/docker-compose.dev.yml up -d --wait",
    "infra:down": "docker compose -f docker/docker-compose.dev.yml down",
    "db:push": "pnpm --filter @thought/server db:push",
    "docker:up:dev": "docker compose -f docker/docker-compose.dev.yml up -d --wait",
    "docker:up:test": "docker compose -f docker/docker-compose.test.yml up -d --wait",
    "docker:up:prod": "docker compose -f docker/docker-compose.prod.yml up -d --wait",
    "docker:up:prod:ui": "docker compose -f docker/docker-compose.prod.yml --profile ui up -d --wait",
    "docker:down": "docker compose -f docker/docker-compose.dev.yml down && docker compose -f docker/docker-compose.test.yml down",
    "docker:down:prod": "docker compose -f docker/docker-compose.prod.yml --profile ui down",
    "docker:down:volumes": "docker compose -f docker/docker-compose.dev.yml down -v && docker compose -f docker/docker-compose.test.yml down -v",
    "docker:logs": "docker compose -f docker/docker-compose.dev.yml logs -f",
    "docker:logs:dev": "docker compose -f docker/docker-compose.dev.yml logs -f",
    "docker:logs:test": "docker compose -f docker/docker-compose.test.yml logs -f",
    "docker:logs:prod": "docker compose -f docker/docker-compose.prod.yml logs -f",
    "db:setup": "pnpm --filter @thought/server db:setup",
    "db:migrate": "pnpm --filter @thought/server db:migrate",
    "db:status": "pnpm --filter @thought/server db:status",
    "db:reset": "pnpm --filter @thought/server db:reset",
    "validate": "pnpm -r validate",
    "validate:ci": "pnpm -r validate:ci",
    "deploy:prod": "pnpm run build && docker compose -f docker/docker-compose.prod.yml --profile ui up -d --build --wait"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "~5.6.2",
    "prettier": "^3.4.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
