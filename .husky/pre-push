#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ðŸš€ Running pre-push validations..."

# Get the remote and branch being pushed to
remote="$1"
url="$2"
current_branch=$(git rev-parse --abbrev-ref HEAD)

# Check if we're pushing to main/master (use strict validation)
if [ "$current_branch" = "main" ] || [ "$current_branch" = "master" ]; then
  echo "ðŸ”’ Pushing to protected branch: $current_branch"
  echo "ðŸ” Running strict validation suite..."
  
  # Use strict validation for main branch
  npm run validate:strict
  if [ $? -ne 0 ]; then
    echo "âŒ Strict validation failed for main branch. Please fix all issues above."
    exit 1
  fi
  
  # Additional checks for main branch
  echo "ðŸ§ª Running extended test suite with coverage..."
  npm run test:coverage
  if [ $? -ne 0 ]; then
    echo "âŒ Extended tests failed on main branch."
    exit 1
  fi
  
  # Check if version has been updated for main branch
  if git log --oneline -5 | grep -E "(bump|version|release|v[0-9])" > /dev/null; then
    echo "âœ… Version update detected in recent commits."
  else
    echo "âš ï¸  No version update detected. Consider bumping version for main branch."
  fi
  
else
  # Regular validation for feature branches
  echo "ðŸ” Running standard validation suite..."
  npm run validate
  if [ $? -ne 0 ]; then
    echo "âŒ Validation suite failed. Please fix the issues above."
    exit 1
  fi
fi

# Security audit (always run)
echo "ðŸ”’ Running security audit..."
npm run security:check
if [ $? -ne 0 ]; then
  echo "âŒ High severity security vulnerabilities detected."
  echo "ðŸ’¡ Run 'npm audit' to see details and 'npm audit fix' to attempt fixes."
  exit 1
fi

# Check for moderate security issues (warning only)
echo "ðŸ” Checking for moderate security issues..."
npm run security:audit > /dev/null 2>&1
if [ $? -ne 0 ]; then
  echo "âš ï¸  Moderate security vulnerabilities detected. Run 'npm audit' for details."
fi

# Check for large files in the entire push
echo "ðŸ“¦ Checking for large files..."
large_files=$(git diff --name-only origin/$current_branch..$current_branch 2>/dev/null | xargs ls -la 2>/dev/null | awk '$5 > 1048576 {print $9 " (" $5 " bytes)"}')
if [ -n "$large_files" ]; then
  echo "âš ï¸  Large files detected (>1MB):"
  echo "$large_files"
  echo "ðŸ’¡ Consider using Git LFS for large files or compressing them."
fi

# Check for dependency changes
echo "ðŸ“¦ Checking for dependency changes..."
if git diff --name-only origin/$current_branch..$current_branch 2>/dev/null | grep -E "package\.json|package-lock\.json|yarn\.lock" > /dev/null; then
  echo "ðŸ“¦ Dependency changes detected. Ensuring lockfile is up to date..."
  if [ -f "package-lock.json" ]; then
    npm ci > /dev/null 2>&1
    if [ $? -ne 0 ]; then
      echo "âš ï¸  package-lock.json might be out of sync. Run 'npm install' locally."
    fi
  fi
fi

# Check for TypeScript 'any' types in the entire codebase (warning for main branch)
if [ "$current_branch" = "main" ] || [ "$current_branch" = "master" ]; then
  echo "ðŸ” Checking for 'any' types in codebase..."
  ANY_COUNT=$(find src -name "*.ts" -exec grep -l ": any\|as any\|any\[\]" {} \; 2>/dev/null | wc -l)
  if [ $ANY_COUNT -gt 0 ]; then
    echo "âš ï¸  Found 'any' types in $ANY_COUNT files. Consider improving type safety."
    echo "ðŸ’¡ Run 'npm run lint:strict' to see specific locations."
  fi
fi

# Performance check - ensure build time is reasonable
echo "â±ï¸  Checking build performance..."
BUILD_START=$(date +%s)
npm run build > /dev/null 2>&1
BUILD_END=$(date +%s)
BUILD_TIME=$((BUILD_END - BUILD_START))

if [ $BUILD_TIME -gt 30 ]; then
  echo "âš ï¸  Build took ${BUILD_TIME}s (>30s). Consider optimizing build performance."
elif [ $BUILD_TIME -gt 60 ]; then
  echo "âŒ Build took ${BUILD_TIME}s (>60s). Build performance needs attention."
  exit 1
else
  echo "âœ… Build completed in ${BUILD_TIME}s"
fi

echo "âœ… Pre-push validations passed!"
if [ "$current_branch" = "main" ] || [ "$current_branch" = "master" ]; then
  echo "ðŸ”’ Strict validation completed for protected branch!"
fi